<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EncodeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <include layout="@layout/toolbar" />

        </com.google.android.material.appbar.AppBarLayout>

        <ImageView
            android:id="@+id/img_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="20dp"
            tools:ignore="MissingConstraints"></ImageView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter key to encode"
            android:gravity="center"
            android:layout_margin="10dp"
            android:id="@+id/encode_key_et"></EditText>

        <EditText
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Text to hide"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hide_text_view"
            tools:ignore="MissingConstraints"></EditText>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hide_btn"
            android:layout_margin="20dp"
            android:text="Done"></Button>

<!--        <Button-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/decode_btn"-->
<!--            android:text="Decode"-->
<!--            android:layout_margin="20dp"></Button>-->

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>